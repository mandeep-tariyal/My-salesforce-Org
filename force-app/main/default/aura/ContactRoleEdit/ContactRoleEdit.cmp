<aura:component>


    <section role="dialog" tabindex="-1" aria-modal="true" aria-labelledby="modal-heading-01"
        class="slds-modal slds-fade-in-open">
        <div class="slds-modal__container">
            <button class="slds-button slds-button_icon slds-modal__close slds-button_icon-inverse">
				<div class="slds-button__icon slds-button__icon_large" aria-hidden="true" onclick="{!c.closeModal}">
                <lightning:icon iconName="utility:close" alternativeText="Error!" title="Error" />
                </div>
                <span class="slds-assistive-text">Cancel and close</span>
            </button>
            <div class="slds-modal__header">
                <h1 id="modal-heading-01" class="slds-modal__title slds-hyphenate">Opportunity Contact Role</h1>
            </div>
            <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">

                <lightning:recordEditForm objectApiName="OpportunityContactRole" onsuccess="{!c.handleSuccess}">
                    <lightning:inputField disabled = "true" fieldName="OpportunityId" value = '0065g00000FgfjPAAR' />
                    <lightning:inputField fieldName="ContactId" />
                    <lightning:inputField fieldName="Role" />
                    <lightning:inputField fieldName="IsPrimary" />

                </lightning:recordEditForm>

                

            </div>
            <div class="slds-modal__footer">
                <button class="slds-button slds-button_neutral" aria-label="Cancel and close">Cancel</button>
                <button class="slds-button slds-button_neutral" aria-label="Cancel and close">Save &amp; New</button>
                <button class="slds-button slds-button_brand">Save </button>
            </div>
        </div>
    </section>
    <div class="slds-backdrop slds-backdrop_open" role="presentation"></div>

</aura:component>